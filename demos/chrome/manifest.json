{
  "manifest_version": 2,

  "name": "My awesome extension",
  "description": "This extension is awesome.",
  "version": "1.0",

  "permissions": [
    "https://secure.flickr.com/"
  ],

  "browser_action": {
    "default_icon": "icon.png"
  },

  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "content.js" ],
      "run_at": "document_end"
    }
  ]
}
